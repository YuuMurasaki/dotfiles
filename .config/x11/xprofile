#!/bin/sh

# This file runs when a DM logs you into a graphical session.
# Add programs which you want to run in the backgroup

# Set wallpaper
xwallpaper --zoom "$HOME/.local/share/wallpaper/wallpaper.png" &

# Start compositor
pidof -sx xcompmgr || xcompmgr &

# Start pipewire
pidof -sx pipewire || pipewire &

# Start dwm bar
sh $HOME/.local/bin/sysbar &
